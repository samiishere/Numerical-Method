//Bisection method
#include<stdio.h>
#include<conio.h>
#include<math.h>
#define f(x) pow(x,2)-4*x-10
int main()
{
    int step=1;
    float x0,x1,x2,f0,f1,f2,e=0.0001;
    up:
    printf("enter the initial guess:\n");
    scanf("%f%f",&x0,&x1);
    f0=f(x0);
    f1=f(x1);
    if(f0*f1>0.0)
    {
      printf("incorrect guess");
    	goto up;
    }
    printf("\nstep\t\tx0\t\tx1\t\tx2\t\tf(x2)\n");
    do
    { 
       x2=(x0+x1)/2;
       f2=(x2);
       printf("%d\t\t%f\t%f\t%f\t%f\n",step,x0,x1,x2,f2);
       if(f0*f2<0)
    	{
    		x1=x2;
        f1=f2;
			}
      else
      {
         x0=x2;
         f0=f2;
         }
         step=step+1;
         }
         while(fabs(f2)>e);
					{
          printf("\nthe value of root is :%f",x2);
          }
          return 0;
          }
